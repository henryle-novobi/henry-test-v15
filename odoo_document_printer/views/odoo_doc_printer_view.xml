    <odoo>
        <record id="odoo_doc_printer_view_tree" model="ir.ui.view"> <field name="name">odoo.doc.printer.tree</field>
        <field name="model">odoo.doc.printer</field>
        <field name="arch" type="xml">
            <tree string="Odoo Doc Printer">
                <field name="name"/>
                <field name="model_id"/>
                <field name="printer_type"/>
                <field name="printer_name"/>
                <field name="active" widget="boolean_toggle"/>
            </tree>
        </field>
    </record>
    <record id="odoo_doc_printer_view_form" model="ir.ui.view">
        <field name="name">odoo.doc.printer.form</field>
        <field name="model">odoo.doc.printer</field>
        <field name="arch" type="xml">
            <form string="Odoo Doc Printer">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="model_id" options="{'no_create': True}"/>
                            <field name="model_name" attrs="{'invisible': [('model_id', '=', False)]}"/>
                            <field name="active" widget="boolean_toggle"/>
                        </group>
                        <group>
                            <field name="printer_type"/>
                            <field name="report_id" domain="[('model_id','=',model_id),('report_type','=','qweb-pdf')]" attrs="{'invisible': ['|',('model_id', '=', False), ('printer_type', '!=', 'network')]}" options="{'no_create': True}"/>
                            <field name="printer_name"/>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

      <record id="odoo_doc_printer_view_search" model="ir.ui.view">
        <field name="model">odoo.doc.printer</field>
        <field name="arch" type="xml">
            <search string="Search Records">
                <field name='name'/>
                <field name='printer_type'/>
                <field name='model_id'/>
                <field name='printer_name'/>
                <field name='report_id'/>
                <filter string="All" name="all_records" domain="['|', ('active','=',True),('active','=',False)]"/>
                <filter string="Active" name="active" domain="[('active','=',True)]"/>
                <filter string="InActive" name="in_active" domain="[('active','=',False)]"/>
            </search>
        </field>
    </record>
    <record id="odoo_doc_printer_action" model="ir.actions.act_window">
        <field name="name">Document Printer</field>
        <field name="res_model">odoo.doc.printer</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_all_records':1}</field>
        <field name="search_view_id" ref="odoo_doc_printer_view_search"/>
    </record>
    <menuitem id="menu_odoo_doc_root" name="Document Printer" sequence="2"/>
    <menuitem id="menu_odoo_doc_printer" name="Records" parent="menu_odoo_doc_root" action="odoo_doc_printer_action" sequence="1"/>
</odoo>
