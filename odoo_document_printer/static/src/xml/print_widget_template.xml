    <templates id="template" xml:space="preserve"> <t t-name="SyncNetworkPrinterWidget">
        <li class="nw_printer oe_status js_synch" title="Sync with the connected printer">
            <div class="js_success oe_icon oe_green oe_hidden">
                <i class='fa fa-fw fa-print'></i>
            </div>
            <div class="js_connected oe_icon oe_hidden" style="color: yellow;">
                <i class='fa fa-fw fa-print'></i>
            </div>

            <div class="js_connecting oe_icon oe_hidden">
                <i class='fa fa-fw fa-spin fa-spinner'></i>
            </div>

            <div class="js_c_error oe_icon oe_red oe_hidden">
                <i class='fa fa-fw fa-print'></i>
            </div>
        </li>
    </t>


    <t t-name="printButtonWidget">
        <button tabindex="0" class="btn btn-primary js_print_doc fa fa-print" aria-label="Info" title="Direct Print" data-toggle="tooltip">
            <span>Print</span>
        </button>
    </t>

</templates>
